{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "es2022"
    ],
    "declaration": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "*": ["src/*"],
      "@entities/*": [
        "entities/*"
      ],
      "@providers/*": [
        "providers/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@useCases/*": [
        "useCases/*"
      ],
      "@http/*": [
        "http/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@types/*": [
        "types/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "types": [
      "reflect-metadata",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*.ts"
  ]
}